#!/bin/bash

VERSION=${1:-"nightly"}
if [ "$VERSION" == "--help" ]; then
  echo "Usage: $0 [VERSION]"
  exit 0
fi

curl --silent \
  "https://3gmrqerxm6.execute-api.us-west-2.amazonaws.com/prod/build-status/{$VERSION}" \
  | ( \
    jq 2>/dev/null \
    || json_pp 2>/dev/null \
    || python -m json.tool 2> /dev/null \
    || cat \
  )
